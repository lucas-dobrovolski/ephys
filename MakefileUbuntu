CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++17 -g -O0 -I/usr/include/hdf5/serial
LDFLAGS = -L/usr/lib/x86_64-linux-gnu/hdf5/serial -lhdf5_cpp -lhdf5 -lz -ldl -lm

SRC = main.cpp
OUT = NeuralynxConverter

all: $(OUT)

$(OUT): $(SRC)
	$(CXX) $(CXXFLAGS) -o $(OUT) $(SRC) $(LDFLAGS)

run: $(OUT)
	./$(OUT)

clean:
	rm -f $(OUT)
